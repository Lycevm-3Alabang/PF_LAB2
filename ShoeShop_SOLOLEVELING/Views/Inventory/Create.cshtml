@model ShoeShop.Services.DTOs.CreateShoeDto

@{
    ViewData["Title"] = "Create New Shoe Model";
}

<div class="custom-panel mx-auto">
    <h1 class="text-dark mb-4">Add New Shoe Model</h1>

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="ModelName" class="form-label">Model Name</label>
            <input asp-for="ModelName" class="form-control" required />
            <span asp-validation-for="ModelName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Brand" class="form-label">Brand</label>
            <input asp-for="Brand" class="form-control" required />
            <span asp-validation-for="Brand" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="RetailPrice" class="form-label">Retail Price</label>
            <input asp-for="RetailPrice" class="form-control" type="number" step="0.01" required />
            <span asp-validation-for="RetailPrice" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Color Variations</label>
            <div id="color-variations-container">
                <input type="text" name="ColorVariations[0].ColorName" placeholder="Color Name (e.g., Black)" class="form-control mb-1" required />

                <input type="number" name="ColorVariations[0].StockQuantity" placeholder="Stock Quantity" class="form-control mb-1" required />

                <input type="number" step="0.01" name="ColorVariations[0].UnitCost" placeholder="Unit Cost" class="form-control mb-1" required />
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>
